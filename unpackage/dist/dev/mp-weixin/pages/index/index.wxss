.category {
  display: flex;
  padding: 12px;
}
.category .category-item {
  width: 25%;
}
.category .category-item image {
  width: 100%;
  height: 160rpx;
}
.title {
  padding: 8px;
}
.title image {
  height: 30px;
}
.list-box {
  padding: 8px;
  display: flex;
}
.list-box image {
  width: 100%;
}
.list-box .list-box-left {
  flex: 1;
}
.list-box .list-box-left image {
  height: 240px;
}
.list-box .list-box-right {
  flex: 2;
  display: flex;
  flex-wrap: wrap;
  flex-wrap: row;
  height: 240px;
}
.list-box .list-box-right image {
  margin-left: 8px;
  margin-bottom: 8px;
  width: 45%;
  height: 48.5%;
